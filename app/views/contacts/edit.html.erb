<h2>Edit a Contact</h2>
<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @contact.name %>
  </div>

  <div>
    <%= label_tag :address %>
    <%= text_field_tag :address %>
  </div>

  <div>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number %>
  </div>

  <%= submit_tag 'Edit Contact' %>

<% end %>